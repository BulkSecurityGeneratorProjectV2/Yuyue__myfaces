<!-- input_secret -->
    <tag>
        <name>input_secret</name>
        <tag-class>net.sourceforge.myfaces.taglib.html.HtmlInputSecretTag</tag-class>
        <body-content>JSP</body-content>
        &ui_component_attributes;
        &ui_input_attributes;
        <!-- FIXME: not all html_input_attributes are used for input_secret
            in RI (e.g. datafld, datasrc, ...) -->
        &html_input_attributes;
        &html_universal_attributes;
        &html_event_handler_attributes;
        &user_role_attributes;
        <!-- SecretRenderer attributes -->
        <attribute>
            <name>redisplay</name>
            <required>false</required>
            <rtexprvalue>false</rtexprvalue>
            <description>
                If true, the value will be re-sent (in plaintext) when the form
                is rerendered (see JSF.7.4.4). Default is false.
            </description>
        </attribute>
    </tag>

