<!-- output_message -->
    <tag>
        <name>output_message</name>
        <tag-class>net.sourceforge.myfaces.taglib.html.HtmlOutputMessageTag</tag-class>
        <body-content>JSP</body-content>
        <description>
            Takes the value of the associated UIOutput component as a MessageFormat
            pattern and formats embedded parameters with this pattern.
        </description>
        &ui_component_attributes;
        &ui_output_attributes;
        &html_universal_attributes;
        &html_event_handler_attributes;
        &user_role_attributes;
        <!-- HtmlOutputMessage attributes
        (API attributes are wrong: OutputMessage has nothing to do with error messages,
         see description above!) -->
        <attribute>
            <name>escape</name>
            <required>false</required>
            <rtexprvalue>false</rtexprvalue>
            <description>
                Indicates whether rendered markup should be escaped.
                Default: true
            </description>
        </attribute>
    </tag>

