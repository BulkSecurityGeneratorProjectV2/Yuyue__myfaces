        <attrdesc name="onkeypress"><display-name /><description /></attrdesc>
        <attrdesc name="onkeydown"><display-name /><description /></attrdesc>
        <attrdesc name="onkeyup"><display-name /><description /></attrdesc>
    </collection>

    <!-- basic renderer collection -->
    <collection name="basic">
        <collections>common-renderer-attributes,
                     html-universal-attributes,
                     html-eventhandler-attributes</collections>
    </collection>

    <!-- HTML 4.0 diverse attributes -->
    <attrdesc name="src"><display-name /><description /></attrdesc>
</definition>