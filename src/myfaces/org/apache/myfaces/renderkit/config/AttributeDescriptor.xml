    <!-- HTML 4.0 universal attributes -->
    <collection name="html-universal-attributes">
        <attrdesc name="dir"><display-name /><description /></attrdesc>
        <attrdesc name="lang"><display-name /><description /></attrdesc>
        <attrdesc name="style"><display-name /><description /></attrdesc>
        <attrdesc name="title"><display-name /><description /></attrdesc>
    </collection>

    <!-- HTML 4.0 event handler attributes -->
    <collection name="html-eventhandler-attributes">
        <attrdesc name="onclick"><display-name /><description /></attrdesc>
        <attrdesc name="ondblclick"><display-name /><description /></attrdesc>
        <attrdesc name="onmousedown"><display-name /><description /></attrdesc>
