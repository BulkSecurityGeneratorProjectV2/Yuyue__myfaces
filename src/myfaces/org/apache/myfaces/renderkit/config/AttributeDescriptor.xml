<?xml version="1.0"?>

<!-- TODO DTD -->

<definition>

    <!--
      ====================================================
      Common Collections
      ====================================================
    -->
    <!-- common renderer attriubtes -->
    <collection name="common-renderer-attributes">
        <attrdesc name="columnClasses" type="java.lang.String"><display-name /><description /></attrdesc>
        <attrdesc name="converter"><display-name /><description /></attrdesc>
        <attrdesc name="dateStyle"><display-name /><description /></attrdesc>
        <attrdesc name="formatPattern"><display-name /><description /></attrdesc>
        <attrdesc name="numberStyle"><display-name /><description /></attrdesc>
        <attrdesc name="rowClasses"><display-name /><description /></attrdesc>
        <attrdesc name="timeStyle"><display-name /><description /></attrdesc>
        <attrdesc name="timezone"><display-name /><description /></attrdesc>
        <attrdesc name="inputClass"><display-name /><description /></attrdesc>
        <attrdesc name="outputClass"><display-name /><description /></attrdesc>
        <attrdesc name="commandClass"><display-name /><description /></attrdesc>
        <attrdesc name="panelClass"><display-name /><description /></attrdesc>
    </collection>

    <!-- HTML 4.0 universal attributes -->
    <collection name="html-universal-attributes">
        <attrdesc name="dir"><display-name /><description /></attrdesc>
        <attrdesc name="lang"><display-name /><description /></attrdesc>
        <attrdesc name="style"><display-name /><description /></attrdesc>
        <attrdesc name="title"><display-name /><description /></attrdesc>
    </collection>

    <!-- HTML 4.0 event handler attributes -->
    <collection name="html-eventhandler-attributes">
        <attrdesc name="onclick"><display-name /><description /></attrdesc>
        <attrdesc name="ondblclick"><display-name /><description /></attrdesc>
        <attrdesc name="onmousedown"><display-name /><description /></attrdesc>
        <attrdesc name="onmouseup"><display-name /><description /></attrdesc>
        <attrdesc name="onmouseover"><display-name /><description /></attrdesc>
        <attrdesc name="onmousemove"><display-name /><description /></attrdesc>
        <attrdesc name="onmouseout"><display-name /><description /></attrdesc>
        <attrdesc name="onkeypress"><display-name /><description /></attrdesc>
        <attrdesc name="onkeydown"><display-name /><description /></attrdesc>
        <attrdesc name="onkeyup"><display-name /><description /></attrdesc>
    </collection>

    <!-- basic renderer collection -->
    <collection name="basic">
        <collections>common-renderer-attributes,
                     html-universal-attributes,
                     html-eventhandler-attributes</collections>
    </collection>

    <!--
      ====================================================
      Common HTML 4.0 attributes
      ====================================================
    -->
    <attrdesc name="alt"><display-name /><description /></attrdesc>
    <attrdesc name="align"><display-name /><description /></attrdesc>
    <attrdesc name="border"><display-name /><description /></attrdesc>
    <attrdesc name="height" type="java.lang.Integer"><display-name /><description /></attrdesc>
    <attrdesc name="width" type="java.lang.Integer"><display-name /><description /></attrdesc>

    <!--
      ====================================================
      Collections for Renderers and UIComponents
      ====================================================
    -->

    <!-- Image Renderer -->
    <collection name="image-renderer">
        <collections>basic</collections>
        <attrdesc name="hspace"><display-name /><description /></attrdesc>
        <attrdesc name="ismap"><display-name /><description /></attrdesc>
        <attrdesc name="longdesc"><display-name /><description /></attrdesc>
        <attrdesc name="name"><display-name /><description /></attrdesc>
        <attrdesc name="src"><display-name /><description /></attrdesc>
        <attrdesc name="usemap"><display-name /><description /></attrdesc>
        <attrdesc name="vspace"><display-name /><description /></attrdesc>
        <attribute ref="alt" />
        <attribute ref="align" />
        <attribute ref="border" />
        <attribute ref="height" />
        <attribute ref="width" />
    </collection>
</definition>