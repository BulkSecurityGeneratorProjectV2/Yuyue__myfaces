<?xml version="1.0"?>

<!-- TODO DTD -->

<definition>

    <!-- common renderer attriubtes -->
    <collection name="common-renderer-attributes">
        <attrdesc name="columnClasses" type="java.lang.String"><display-name /><description /></attrdesc>
        <attrdesc name="converter"><display-name /><description /></attrdesc>
        <attrdesc name="dateStyle"><display-name /><description /></attrdesc>
        <attrdesc name="formatPattern"><display-name /><description /></attrdesc>
        <attrdesc name="numberStyle"><display-name /><description /></attrdesc>
        <attrdesc name="rowClasses"><display-name /><description /></attrdesc>
        <attrdesc name="timeStyle"><display-name /><description /></attrdesc>
        <attrdesc name="timezone"><display-name /><description /></attrdesc>
        <attrdesc name="inputClass"><display-name /><description /></attrdesc>
        <attrdesc name="outputClass"><display-name /><description /></attrdesc>
        <attrdesc name="commandClass"><display-name /><description /></attrdesc>
        <attrdesc name="panelClass"><display-name /><description /></attrdesc>
