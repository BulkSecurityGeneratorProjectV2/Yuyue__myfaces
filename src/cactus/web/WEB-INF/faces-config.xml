<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config>

    <!-- these settings have precedence over test-config.xml -->

    <lifecycle>
        <phase-listener>net.sourceforge.myfaces.confignew.TestPhaseListenerA</phase-listener>
    </lifecycle>

    <managed-bean>
        <description>This bean is used in the cactus test for bug 925693</description>
        <managed-bean-name>invoice</managed-bean-name>
        <managed-bean-class>net.sourceforge.myfaces.bug925693.Invoice</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>        
    </managed-bean>

    <managed-bean>
        <description>This bean is used in the cactus test for bug 972165</description>
        <managed-bean-name>bug972165Bean</managed-bean-name>
        <managed-bean-class>net.sourceforge.myfaces.renderkit.html.Bug972165Bean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>checkDisabled</property-name>
            <value>true</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <description>This bean is used in the cactus test for bug 973025</description>
        <managed-bean-name>bug973025Bean</managed-bean-name>
        <managed-bean-class>java.util.HashMap</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <map-entries>
            <map-entry>
                <key>imageURL</key>
                <value>/bug973025/image.png</value>
            </map-entry>
        </map-entries>
    </managed-bean>

    <managed-bean>
        <description>This bean can be used by multiple tests</description>
        <managed-bean-name>commonRequestScopeBean</managed-bean-name>
        <managed-bean-class>net.sourceforge.myfaces.cactus.CommonModelBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <description>This bean can be used by multiple tests</description>
        <managed-bean-name>commonSessionScopeBean</managed-bean-name>
        <managed-bean-class>net.sourceforge.myfaces.cactus.CommonModelBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>


    <application>
        <view-handler>net.sourceforge.myfaces.confignew.TestViewHandlerA</view-handler>
        <message-bundle>messageBundleA</message-bundle>
    </application>

    <lifecycle>
        <phase-listener>net.sourceforge.myfaces.confignew.TestPhaseListenerB</phase-listener>
    </lifecycle>

    <factory>
        <lifecycle-factory>net.sourceforge.myfaces.confignew.TestLifecycleFactory</lifecycle-factory>
    </factory>

</faces-config>
