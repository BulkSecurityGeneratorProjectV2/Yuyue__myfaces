<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd" [
<!ENTITY additional_beans  SYSTEM "beans/additional-beans.xml">
]>
<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config>


    &additional_beans;


    <managed-bean>
        <description>This bean is used to provide values for tests using value bindings</description>
        <managed-bean-name>testDataProvider</managed-bean-name>
        <managed-bean-class>net.sourceforge.myfaces.cactus.TestDataProviderBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>


    <managed-bean>
        <description>This bean is used to test managed properties</description>
        <managed-bean-name>testManagedProperties</managed-bean-name>
        <managed-bean-class>net.sourceforge.myfaces.cactus.TestBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>numberPrimitiveLong</property-name>
            <value>5</value>
        </managed-property>
        <managed-property>
            <property-name>numberLong</property-name>
            <value>#{testDataProvider.long}</value>
        </managed-property>
        <managed-property>
            <property-name>valueWithDefault</property-name>
            <null-value/>
        </managed-property>
        <managed-property>
            <property-name>list</property-name>
            <list-entries>
                <value-class>java.lang.Integer</value-class>
                <value>29</value>
                <value>#{testDataProvider.long}</value>
                <null-value/>
                <value>#{testDataProvider.primitiveLong}</value>
            </list-entries>
        </managed-property>
        <managed-property>
            <property-name>map</property-name>
            <map-entries>
                <value-class>java.lang.Integer</value-class>
                <map-entry>
                    <key>key1</key>
                    <value>25</value>
                </map-entry>
                <map-entry>
                    <key>#{testDataProvider.string}</key>
                    <value>29</value>
                </map-entry>
                <map-entry>
                    <key>#{testDataProvider.string}44</key>
                    <value>#{testDataProvider.long}</value>
                </map-entry>
                <map-entry>
                    <key>nullValue</key>
                    <null-value/>
                </map-entry>
            </map-entries>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <description>This bean is used to test a managed list</description>
        <managed-bean-name>testList</managed-bean-name>
        <managed-bean-class>java.util.ArrayList</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <list-entries>
            <value-class>java.lang.Integer</value-class>
            <value>29</value>
            <value>#{testDataProvider.long}</value>
            <null-value/>
            <value>#{testDataProvider.primitiveLong}</value>
        </list-entries>
    </managed-bean>

    <managed-bean>
        <description>This bean is used to test a managed map</description>
        <managed-bean-name>testMap</managed-bean-name>
        <managed-bean-class>java.util.HashMap</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <map-entries>
            <value-class>java.lang.Integer</value-class>
            <map-entry>
                <key>key1</key>
                <value>25</value>
            </map-entry>
            <map-entry>
                <key>#{testDataProvider.string}</key>
                <value>29</value>
            </map-entry>
            <map-entry>
                <key>#{testDataProvider.string}44</key>
                <value>#{testDataProvider.long}</value>
            </map-entry>
            <map-entry>
                <key>nullValue</key>
                <null-value/>
            </map-entry>
        </map-entries>
    </managed-bean>


    <application>
        <view-handler>net.sourceforge.myfaces.config.TestViewHandlerB</view-handler>
        <navigation-handler>net.sourceforge.myfaces.config.TestNavigationHandler</navigation-handler>
        <property-resolver>net.sourceforge.myfaces.config.TestPropertyResolver</property-resolver>
        <variable-resolver>net.sourceforge.myfaces.config.TestVariableResolver</variable-resolver>
        <state-manager>net.sourceforge.myfaces.config.TestStateManager</state-manager>
    </application>

    <application>
        <message-bundle>messageBundleB</message-bundle>
    </application>

    <render-kit>
      <renderer>
          <component-family>javax.faces.Command</component-family>
          <renderer-type>javax.faces.Button</renderer-type>
          <renderer-class>net.sourceforge.myfaces.renderkit.html.HtmlButtonRenderer</renderer-class>
      </renderer>
    </render-kit>

    <render-kit>
        <render-kit-id>TEST_RENDER_KIT</render-kit-id>
        <renderer>
            <component-family>test.Command</component-family>
            <renderer-type>test.Button</renderer-type>
            <renderer-class>net.sourceforge.myfaces.renderkit.html.HtmlButtonRenderer</renderer-class>
        </renderer>
    </render-kit>

    <navigation-rule>
        <navigation-case>
            <from-outcome>Foo</from-outcome>
            <to-view-id>/Foo.jsp</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

</faces-config>
