<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>

    <navigation-rule>
        <navigation-case>
            <description>case 1: no from-view-id</description>
            <from-outcome>outcome1</from-outcome>
            <to-view-id>/page1.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <description>case 2: from-view-id = *, with from-outcome, no from-action</description>
            <from-outcome>outcome2</from-outcome>
            <to-view-id>/page2.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <description>case 3: from-view-id = *, with from-outcome and from-action</description>
            <from-action>#{action3}</from-action>
            <from-outcome>outcome3</from-outcome>
            <to-view-id>/page3.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <description>case 4: from-view-id = *, no from-outcome, with from-action</description>
            <from-action>#{action4}</from-action>
            <to-view-id>/page4.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/from5.jsp</from-view-id>
        <navigation-case>
            <description>case 5: exact from-view-id match, with from-outcome, no from-action</description>
            <from-outcome>outcome5</from-outcome>
            <to-view-id>/page5.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/context6/*</from-view-id>
        <navigation-case>
            <description>case 6: wildcard from-view-id match, with from-outcome, no from-action</description>
            <from-outcome>outcome6</from-outcome>
            <to-view-id>/page6.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>

    <managed-bean>
        <description>Test bean</description>
        <managed-bean-name>testBean_B</managed-bean-name>
        <managed-bean-class>net.sourceforge.myfaces.el.B</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>

        <managed-property>
            <property-name>name</property-name>
            <value>testName</value>
        </managed-property>

        <managed-property>
            <property-name>int</property-name>
            <value>1</value>
        </managed-property>

        <managed-property>
            <property-name>double</property-name>
            <value>1.1</value>
        </managed-property>

        <managed-property>
            <property-name>integer</property-name>
            <value>2</value>
        </managed-property>

        <managed-property>
            <property-name>double2</property-name>
            <value>2.2</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <description>Test bean</description>
        <managed-bean-name>testBean_B1</managed-bean-name>
        <managed-bean-class>net.sourceforge.myfaces.el.B</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>

        <managed-property>
            <property-name>double2</property-name>
            <value>#{testBean_B.double2}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <description>Test bean</description>
        <managed-bean-name>testBean_B2</managed-bean-name>
        <managed-bean-class>net.sourceforge.myfaces.el.B</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <description>Test bean</description>
        <managed-bean-name>testBean_E</managed-bean-name>
        <managed-bean-class>net.sourceforge.myfaces.el.E</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

</faces-config>
